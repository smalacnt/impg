package tor

import (
    "fmt"
    "net/http"
    "io"
    "os"
)

func GetFile(path string, id string) error {
    url := fmt.Sprintf("http://www.141jav.com/file.php?n=%s&q=torrage", id)
    res, err := http.Get(url)
    if err != nil {
        return err
    }
    fileName := id + ".torrent"
    if err != nil {
        return err
    }
    file, err := os.Create(path + "\\" + fileName)
    io.Copy(file, res.Body)
    file.Sync()
    file.Close()
    res.Body.Close()
    return nil
}
